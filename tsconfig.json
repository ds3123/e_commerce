{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve" ,
    "paths": {
       "@components" : ["components"] ,
       "@components/common/*" : ["components/common/*"] ,
       "@common/*" : ["components/common/*"] ,
       "@layout/*" : ["components/common/Layout/*"] ,
       "@components/*" : ["components/*"] ,
       "@assets"     : ["assets"] ,
       "@assets/*"     : ["assets/*"] 
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "pages/_app.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
